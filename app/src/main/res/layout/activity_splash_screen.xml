<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.pickit.kronos.pickit.SplashScreenActivity">

    <ImageView
        android:layout_width="194dp"
        android:layout_height="200dp"
        android:adjustViewBounds="false"
        android:background="#ffffff"
        android:contentDescription="TODO"
        android:src="@drawable/pickitlogo" />

    <TextView
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:text="                              Click, Pick &amp; Fly"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="italic" />

    <EditText
                android:id="@+id/splash_screen_airport_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:hint="ORDER ID"
                android:inputType="text"
        android:textSize="15sp" />

    <Button
        android:id="@+id/splash_screen_start"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:enabled="false"
        android:padding="16dp"
        android:text="Start  Picking"
        android:textColor="@android:color/background_light" />





</LinearLayout>
