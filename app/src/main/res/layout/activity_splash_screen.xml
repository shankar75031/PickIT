<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff"
    tools:context="com.pickit.kronos.pickit.SplashScreenActivity">

    <ImageView
        android:layout_width="194dp"
        android:layout_height="200dp"
        android:adjustViewBounds="false"
        android:background="#ffffff"
        android:src="@drawable/pickitlogo" android:contentDescription="TODO" />

    <TextView
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:text="                              Click, Pick &amp; Fly"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="italic" />

    <AutoCompleteTextView
                android:id="@+id/splash_screen_airport_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:hint="Airport Code"
                android:inputType="text"
                android:textSize="15sp"
                android:layout_marginTop="20dp"/>
    <Spinner
        android:id="@+id/splash_screen_terminal_select_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Terminal"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/splash_screen_start"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="       Start  Picking      "
        android:textColor="@android:color/background_light"
        android:layout_marginTop="20dp"/>





</LinearLayout>
